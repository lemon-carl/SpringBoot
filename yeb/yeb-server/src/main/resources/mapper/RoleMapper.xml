<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lemon.server.mapper.RoleMapper">
    <resultMap id="BaseResultMap" type="com.lemon.server.pojo.Role">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="nameZh" property="nameZh"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,`name`,nameZh
    </sql>


    <select id="getRoles" resultType="com.lemon.server.pojo.Role">
        SELECT
        r.id,
        r.`name`,
        r.nameZh
        FROM
            t_role r
        LEFT JOIN t_admin_role ar ON r.id = ar.rid
        WHERE
        ar.adminId = #{adminId}
    </select>
</mapper>
